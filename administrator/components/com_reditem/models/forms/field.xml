<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="field-information">
		<field name="id"
			type="hidden"
			default="0"
			class="readonly"
			readonly="true"
			/>
		<field name="type_id"
			type="ritypelist"
			label="COM_REDITEM_FIELD_TYPE"
			required="true"
			description=""
			class="input-xlarge"
			>
			<option value="">COM_REDITEM_SELECT</option>
		</field>
		<field name="name"
			type="text"
			default=""
			label="COM_REDITEM_FIELD_NAME"
			required="true"
			class="input-xlarge"
			description="COM_REDITEM_FIELD_NAME_DESCRIPTION"
			message="COM_REDITEM_FIELD_NAME_DESCRIPTION"
		/>
		<field name="fieldcode" type="hidden" readonly="true" />
		<field name="type"
			type="list"
			class="chosen input-xlarge"
			label="COM_REDITEM_FIELD_FIELDTYPE"
			description="COM_REDITEM_FIELD_FIELDTYPE_DESCRIPTION"
			required="true"
			onchange="submitform('field.setType');"
			default="">
			<option value="">COM_REDITEM_FIELD_SELECT_TYPE</option>
			<option value="checkbox">COM_REDITEM_FIELD_SELECT_TYPE_OPTION_CHECKBOX</option>
			<option value="date">COM_REDITEM_FIELD_SELECT_TYPE_OPTION_DATE</option>
			<option value="editor">COM_REDITEM_FIELD_SELECT_TYPE_OPTION_EDITOR</option>
			<option value="gallery">COM_REDITEM_FIELD_SELECT_TYPE_OPTION_GALLERY</option>
			<option value="googlemaps">COM_REDITEM_FIELD_SELECT_TYPE_OPTION_GOOGLEMAP</option>
			<option value="file">COM_REDITEM_FIELD_SELECT_TYPE_OPTION_FILE</option>
			<option value="image">COM_REDITEM_FIELD_SELECT_TYPE_OPTION_IMAGE</option>
			<option value="number">COM_REDITEM_FIELD_SELECT_TYPE_OPTION_NUMBER</option>
			<option value="radio">COM_REDITEM_FIELD_SELECT_TYPE_OPTION_RADIO</option>
			<option value="select">COM_REDITEM_FIELD_SELECT_TYPE_OPTION_SELECTLIST</option>
			<option value="text">COM_REDITEM_FIELD_SELECT_TYPE_OPTION_TEXT</option>
			<option value="textarea">COM_REDITEM_FIELD_SELECT_TYPE_OPTION_TEXTAREA</option>
			<option value="youtube">COM_REDITEM_FIELD_SELECT_TYPE_OPTION_YOUTUBE</option>
		</field>
		<field name="options"
			type="textarea"
			cols="100"
			rows="5"
			class="input-xlarge"
			label="COM_REDITEM_FIELD_OPTIONS"
			description="COM_REDITEM_FIELD_OPTIONS_DESCRIPTION"
			/>
		<field name="published" type="radio"
			   label="JPUBLISHED"
			   class="btn-group"
			   default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
	</fieldset>
	<fields name="params">
	</fields>
</form>